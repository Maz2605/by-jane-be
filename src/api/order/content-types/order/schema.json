{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "customerName": {
      "type": "string"
    },
    "customerPhone": {
      "type": "string"
    },
    "customerEmail": {
      "type": "email"
    },
    "shippingAddress": {
      "type": "text"
    },
    "totalAmount": {
      "type": "biginteger"
    },
    "paymentMethod": {
      "type": "enumeration",
      "enum": [
        "cod",
        "banking"
      ]
    },
    "orderStatus": {
      "type": "enumeration",
      "default": "pending",
      "enum": [
        "pending",
        "confirmed",
        "shipping",
        "done",
        "cancelled"
      ]
    },
    "items": {
      "type": "component",
      "component": "shop.order-item",
      "repeatable": true
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "orders"
    },
    "note": {
      "type": "text"
    }
  }
}
